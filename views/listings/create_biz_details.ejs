<% data.forEach(function(business){%>
<div class="container">
  <form id="submit-create" action="/auth_biz/create_biz_details/<%- business.id %>" method="POST">
    <h1><%- business.businessName %>'s </h1>

    <h2>Key Summary</h2>
      <div class="form-group">
        <label for="revenue">Revenue</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
        <input type="number" class="form-control" name="revenue" placeholder="Revenue">
      </div>
    </div>

      <div class="form-group">
        <label for="grossprofit">Gross Profit</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
        <input type="number" class="form-control" name="grosprofit" placeholder="Gross Profit">
      </div>
    </div>

      <div class="form-group">
        <label for="netprofit">Net Profit</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
        <input type="number" class="form-control" name="netprofit" placeholder="Net Profit">
      </div>
    </div>

      <div class="form-group">
        <label for="cashflow">Cash Flow</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
        <input type="number" class="form-control" name="cashflow" placeholder="Cash Flow">
      </div>
    </div>

      <!-- Operating Expenses -->
      <div class="form-group">
        <label for="Operating Expenses">Operating Expenses</label>
        <div class="input-group-addon">$</div>
        <input type="text" class="form-control" name="operatingexpenses" placeholder="Operating Expenses">
      </div>

      <!-- Total Assets -->
      <div class="form-group">
        <label for="Total Assets">Total Assets</label>
        <div class="input-group-addon">$</div>
        <input type="text" class="form-control" name="totalassests" placeholder="Total Assets">
      </div>

      <!-- Total Liabilities -->
      <div class="form-group">
        <label for="Total Liabilities">Total Liabilities</label>
        <div class="input-group-addon">$</div>
        <input type="text" class="form-control" name="totalliabilities" placeholder="Total Liabilities">
      </div>

      <!-- Employees -->
        <div class="form-group">
          <label for="employees">Number of Employees</label>
          <input type="number" class="form-control" name="employee" placeholder="No. of Employees">
        </div>
        <!-- button -->
        <div class="col-xs-12">
          <button type="submit" class=" btn btn-primary ">Create</button>
        </div>
  </form>
</div>
<% }) %>
